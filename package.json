    "abdk-libraries-solidity": "^3.2.0",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.0.4",
    "ethers": "^5.7.0",
    "hardhat": "^2.10.2",
    "prettier": "^2.7.1",
